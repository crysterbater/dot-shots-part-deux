;*********************************************************
;
;                          COLORS
;
;**********************************************************
[colors]
; Base colors from .Xresources
bg          =  #0C0C0C
bg-alt      =  #c5c5c5
fg          =  ${xrdb:foreground}
fg-alt      =  ${xrdb:color8}
red         =  ${xrdb:color1}
red-alt     =  ${xrdb:color9}
green       =  ${xrdb:color2}
green-alt   =  ${xrdb:color10}
yellow      =  ${xrdb:color3}
yellow-alt  =  ${xrdb:color11}
blue        =  ${xrdb:color4}
blue-alt    =  ${xrdb:color12}
magenta     =  ${xrdb:color5}
magenta-alt =  ${xrdb:color13}
cyan        =  ${xrdb:color6}
cyan-alt    =  ${xrdb:color14}
white       =  ${xrdb:color7}
white-alt   =  ${xrdb:color15}



;**********************************************************
;
;                       GLOBAL WM SETTINGS
;
;**********************************************************
[global/wm]
margin-top = 0
margin-bottom = 0


;*********************************************************
;
;                       BAR SETTINGS
;
;********************************************************
[bar/top]
monitor   = eDP1
bottom    = false
width     = 100%
height    = 30
offset-x  = 0
offset-y  = 0
override-redirect = false

background = ${colors.bg}
foreground = ${colors.fg}

;border-bottom-size = 1
;border-top-size = 3
;border-top-color = ${colors.green}
;border-bottom-color = ${colors.bg-alt}

spacing = 0
padding-left = 0
padding-right = 0
module-margin-left = 0
module-margin-right = 0

font-0 = Iosevka Slab:size=10;3
font-1 = Material Icons:antialia=false:size=12;5
font-2 = icomoon:antialias=false:size=12;3

modules-left = powermenu
modules-center = mpd
modules-right = updates cpu memory wlan battery date seperator3


;**********************************************************
;
;                   MODULES SETTINGS
;
;**********************************************************

[module/seperator]
type = custom/text
content =|│
content-foreground = #101417

[module/seperator2]
type = custom/text
content =|│
content-foreground = #7BB2B5

[module/seperator3]
type = custom/text
content =|│
content-foreground = #0C0C0C

[module/seperator4]
type = custom/text
content =|│
content-foreground = #0C0C0C

