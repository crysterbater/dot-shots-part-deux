[module/spotipy]
type = custom/script
exec =  python3 ~/scripts/spoti.py
exec-if = pgrep spotify > /dev/null
interval = 0.01
click-left = playerctl -p spotify play-pause
format-background = ${colors.graphite}
format-padding = 2

[module/playpause]
type = custom/script
exec = python3 ~/scripts/playpause.py
interval = 0.01
click-left = playerctl -p spotify play-pause
format-foreground = ${colors.accent_2}
format-background = ${colors.graphite}
format-padding = 2

[module/previous]
type = custom/script
format-text = <label>
label = 
exec = echo label
click-left = exec playerctl previous
format-foreground = ${colors.accent_2}
format-background = ${colors.graphite}
format-padding = 2

[module/next]
type = custom/script
format-text = <label>
label = 
exec = echo label
click-left = exec playerctl next
format-foreground = ${colors.accent_2}
format-background = ${colors.graphite}
format-padding = 2
